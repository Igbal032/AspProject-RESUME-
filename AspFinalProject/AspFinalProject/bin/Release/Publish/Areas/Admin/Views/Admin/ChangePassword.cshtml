@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="container">

    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
            <div class="card card-signin my-5">
                <div class="card-body">

                    <a class="btn btn-sm btn-primary" href="@Url.Action("Index","Admin")">Return Back</a>

                    <h5 class="card-title text-center">Change Your Password</h5>
                    <form class="form-signin" method="post" action="@Url.Action("ChangePasswordd","Admin", new { area="Admin"})">

                        <div class="form-label-group">
                            <input type="password" id="inputPassword" name="oldpassword" class="form-control" placeholder="Old Password" required>
                            <label for="inputPassword">Password</label>
                        </div>
                        <p class="font-weight-bold" style="color:red;">@TempData["OldPassword"]</p>
                        <div class="form-label-group">
                            <input type="password" id="inputPassword" name="newpassword" class="form-control" placeholder="New Password" required>
                            <label for="inputPassword">Password</label>
                        </div>
                        <div class="form-label-group">
                            <input type="password" id="inputPassword" name="confirmnewpassword" class="form-control" placeholder="Confirm New Password" required>
                            <label for="inputPassword">Password</label>
                        </div>
                        <p class="font-weight-bold" style="color:red;">@TempData["Confirm"]</p>

                        <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Change Password</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
