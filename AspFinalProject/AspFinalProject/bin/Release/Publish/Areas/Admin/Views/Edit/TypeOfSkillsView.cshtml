@model IEnumerable<AspFinalProject.Models.Entity.TypeOfSkill>

<input type="hidden" id="skilIdInput"  name="typeoffskillss" value="" class="typeoffskillsName" />

<select id="skillPicer" class="selectpicker">
    <option disabled selected value="">All Skills</option>

    @foreach (var item in Model)
    {
        <option value="@item.Id">@item.Name</option>
    }

</select>
<span id="addSkills" class="add-custm">or <a href="#."> Add A Custom Skills OR Delete</a></span>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script>
    $("#skillPicer").change(function () {
        var selected = $(this).children("option:selected").val();
        $("#skilIdInput").val(selected);
    });

</script>