@using AspFinalProject.Models.Entity
@model AspFinalProject.Models.Entity.Person

@{
    var myCvDbContext = new AspFinalProject.Models.myCvDbContext();
    var skillList = myCvDbContext.Skills.Where(w=>w.DeletedDate==null).ToList();
}
<div class="col-md-8">
    <!-- ABOUT ME -->
    <div class="tab-pane fade in active" id="about-me">
        <div class="inside-sec">
            <!-- BIO AND SKILLS -->
            <h5 class="tittle">About Me</h5>

            <!-- Blog -->
            <section class="about-me padding-top-10">
                <!-- Personal Info -->
                <ul class="personal-info">

                    <li>
                        <p> <span> Name</span>@Model.FullName </p>
                    </li>
                    <li>
                        <p> <span> Age</span> @Model.Age </p>
                    </li>
                    <li>
                        <p> <span> Location</span> @Model.Location </p>
                    </li>
                    <li>
                        <p> <span> Experience</span> @Model.Experience </p>
                    </li>
                    <li>
                        <p> <span> Degree</span>@Model.Degree </p>
                    </li>
                    <li>
                        <p> <span> Career Level</span>@Model.CareerLevel </p>
                    </li>
                    <li>
                        <p> <span> Phone</span> @Model.Phone </p>
                    </li>
                    <li>
                        <p> <span> FAX</span> @Model.Fax </p>
                    </li>
                    <li>
                        <p> <span>Email</span> <a href="#.">@Model.Email</a> </p>
                    </li>
                    <li>
                        <p> <span> Website</span><a href="#.">@Model.Website</a></p>
                    </li>

                </ul>

                <!-- I’m Web Designer -->
                <h5 class="tittle">I’m Web Designer</h5>
                <div class="padding-20">
                    @foreach (var item in skillList)
                    {
                        <p>
                            @item.YourDescription
                        </p>
                    }

                </div>

               
           
                <!-- Skills -->
                <h5 class="tittle">Skills</h5>


                <!-- Sound Engineering -->
                <div class="panel-group accordion padding-20" id="accordion">
                    @foreach (var item in skillList)
                    {
                        <div class="panel panel-default">
                            <div class="row">
                                <div class="col-sm-4">
                                    <!-- PANEL HEADING -->
                                    <div class="panel-heading">
                                        <h4 class="panel-title"> <a data-toggle="collapse" data-parent="#accordion" href="#@item.Id" class="collapsed"> @item.TypeOfSkill </a> </h4>
                                    </div>
                                </div>

                                <!-- Skillls Bars -->
                                <div class="col-sm-8">
                                    <div class="progress">
                                        <div class="progress-bar" role="progressbar" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100" style="width: @item.SkillLevel%;"> <span class="sr-only">60% Complete</span> </div>
                                    </div>

                                    <!-- Skillls Text -->
                                    <div id="@item.Id" class="panel-collapse collapse">
                                        <div class="panel-body">
                                            <p>@item.SkillDescription</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                </div>
            </section>
        </div>
    </div>
</div>

