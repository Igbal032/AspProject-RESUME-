@model  IEnumerable<AspFinalProject.Models.Entity.Skills>

@{


    Layout = null;
}

<div class="inside-sec">
    <h5 class="tittle">Bio & Skills</h5>
    <div class="bio-info padding-30">
        @foreach (var item in Model)
        {
        <p>
            @item.YourDescription
            <br>

        </p>
        }
        
    <div class="skills">

        <!-- HARD SKILLS -->
        <h5 class="margin-top-30">Hard Skills</h5>
        <h6></h6>



        <!-- Soft Skills -->
        <h5 class="margin-top-30">Soft Skills</h5>

        <!-- Application of knowledge -->
        @*TODO*@

        @foreach (var item in Model)
        {

            if (item.DisplayAsBar == true)
            {
                <h6>@item.Category</h6>

                <div class="panel-group accordion" id="accordion1">
                    <div class="panel panel-default">
                        <div class="row">
                            <div class="col-sm-4">
                                <!-- PANEL HEADING -->
                                <div class="panel-heading">
                                    <h4 class="panel-title"> <a data-toggle="collapse" data-parent="#accordion1" href="#@item.Id" class="" aria-expanded="true">@item.TypeOfSkill</a> </h4>
                                </div>
                            </div>

                            <!-- Skillls Bars -->
                            <div class="col-sm-8">
                                <div class="progress">
                                    <div class="progress-bar" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: @item.SkillLevel%;"> <span class="sr-only">60% Complete</span> </div>
                                </div>

                                <!-- Skillls Text -->
                                <div id="@item.Id" class="panel-collapse collapse in" aria-expanded="true" style="">
                                    <div class="panel-body">
                                        <p>@item.SkillDescription</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }


        <!-- Follow ethical -->
        <div class="ethical">
            <h6>Follow ethical work practices</h6>

            @foreach (var item in Model)
            {
                if (item.DisplayAsTag == true)
                {
                    <a href="#.">@item.TypeOfSkill</a>

                }
            }
        </div>
    </div>
    </div>
</div>
